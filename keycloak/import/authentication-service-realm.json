{
  "realm": "authentication-service",
  "enabled": true,
  "displayName": "Authentication Service",
  "sslRequired": "NONE",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "roles": {
    "realm": [
      {
        "name": "ROLE_USER",
        "description": "Базовая роль пользователя",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "ROLE_ADMIN",
        "description": "Роль администратора приложения",
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "clients": [
    {
      "clientId": "authentication-service-client",
      "name": "authentication-service-client",
      "secret": "authentication-service-secret",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "frontchannelLogout": false,
      "attributes": {
        "access.token.lifespan": "900",
        "client_credentials.use_refresh_token": "true"
      },
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "user-service-client",
      "name": "user-service-client",
      "secret": "user-service-secret",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "frontchannelLogout": false,
      "redirectUris": [
        "http://localhost:8082/*"
      ],
      "webOrigins": [
        "http://localhost:8082"
      ],
      "defaultClientScopes": [
        "web-origins",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ],
  "users": [
    {
      "username": "admin@tut.by",
      "email": "admin@tut.by",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "realmRoles": [
        "ROLE_ADMIN"
      ],
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ]
    }
  ]
}

